@model ScrumApp.Models.UserModel

@{
    ViewData["Title"] = "Modification du mot de passe";
}

<h1>Modification du mot de passe</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePasswordAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdUser" class="form-control" />
                <input type="hidden" asp-for="CleRecuperation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
